<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.accordmall.mapper.CartMapper">
    <!--基本表-->
    <sql id="BASE_TABLE">
        cart
    </sql>
    
    <!--返回的数据对象-->
    <resultMap id="cartDtoMap" type="cn.accordmall.pojo.dto.CartDto">
        <id column="cart_id" property="cartId"></id>
        <result column="user_id" property="userId"></result>
        <result column="commodity_id" property="commodityId"></result>
        <result column="cart_prices" property="cartPrices"></result>
        <association property="commodity" javaType="cn.accordmall.pojo.model.Commodity" column="commodity_id"  select="cn.accordmall.mapper.CommodityMapper.selectById"></association>
    </resultMap>

    <!--根据用户id 查询购物车-->
    <select id="getCartDtoPage" resultMap="cartDtoMap" parameterType="java.lang.Integer">
        select * 
        from 
        <include refid="BASE_TABLE"></include>
        <where>
            user_id = #{userId}
        </where>
    </select>

    <!--根据用户id查询购物车详情-->
    <select id="getCartDtoByCartId" resultMap="cartDtoMap" parameterType="java.lang.Integer">
        select *
        from
        <include refid="BASE_TABLE"></include>
        <where>
            cart_id = #{cartId}
        </where>
    </select>
</mapper>
